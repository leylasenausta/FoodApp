<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loginRoots"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/tab_user_icon"
            app:civ_border_color="#BFBFBF"
            app:civ_border_width="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/textViewTelefon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="32dp"
            android:text="TELEFON"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgProfile"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/textViewPosta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="64dp"
            android:text="E-POSTA"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgProfile"
            tools:ignore="MissingConstraints" />


        <View
            android:id="@+id/view"
            android:layout_width="338dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#BFBFBF"
            app:layout_constraintEnd_toEndOf="@+id/textViewPosta"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="@+id/textViewTelefon"
            app:layout_constraintTop_toBottomOf="@+id/textViewPosta"
            tools:ignore="MissingConstraints">

        </View>


        <View
            android:id="@+id/viewPostInce"
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="#FFB052"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/textViewPosta"
            app:layout_constraintStart_toStartOf="@+id/textViewPosta"
            app:layout_constraintTop_toBottomOf="@+id/textViewPosta"
            tools:ignore="MissingConstraints">

        </View>

        <View
            android:id="@+id/viewTelephoneInce"
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="#FFB052"
            app:layout_constraintEnd_toEndOf="@+id/textViewTelefon"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="@+id/textViewTelefon"
            app:layout_constraintTop_toBottomOf="@+id/textViewTelefon"
            tools:ignore="MissingConstraints">

        </View>

        <EditText
            android:id="@+id/editTextTelefonRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/register_edit_text"
            android:ems="10"
            android:hint="Telefon"
            android:inputType="phone"
            android:padding="14dp"
            android:textColor="#A6A6A6"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/register_edit_text"
            android:enabled="false"
            android:padding="14dp"
            android:text="İLERİ"
            android:textColor="#A6A6A6"
            app:layout_constraintEnd_toEndOf="@+id/editTextTelefonRegister"
            app:layout_constraintStart_toStartOf="@+id/editTextTelefonRegister"
            app:layout_constraintTop_toBottomOf="@+id/editTextTelefonRegister" />

        <View
            android:id="@+id/Golgi2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="75dp"
            android:background="#BFBFBF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"></View>

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="Hesabın zaten var mı ?"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Golgi2"
            app:layout_constraintVertical_bias="0.509"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textViewGrisYap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Giriş yap"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView21"
            app:layout_constraintTop_toBottomOf="@+id/Golgi2"
            app:layout_constraintVertical_bias="0.509"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/loginContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorYellow"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/loginRoots"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/loginRoots">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>